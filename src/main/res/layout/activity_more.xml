<?xml version="1.0" encoding="utf-8"?>
<ua.tripguide.tripguideua.Utils.CustomScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="8dp"
    android:weightSum="100"
    android:descendantFocusability="beforeDescendants"
    tools:context=".MoreActivity">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="15dp">

            <ImageView
                android:id="@+id/iv_thumbnail_object"
                android:layout_width="match_parent"
                android:layout_height="240dp"
                android:src="@drawable/chernivtsi"
                tools:ignore="ContentDescription" />

            <TextView
                android:id="@+id/tv_error_image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:layout_gravity="center"
                android:textStyle="italic"
                android:textColor="#990000"
                android:textSize="12sp"
                android:visibility="invisible"/>

            <TextView
                android:id="@+id/tv_working_hours"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:textColor="@android:color/black"
                android:textSize="15sp" />

            <com.codesgood.views.JustifiedTextView
                android:id="@+id/tv_description_object"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:textColor="@android:color/black"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/tv_map_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="15dp"
                android:textAlignment="center"
                android:textStyle="bold"
                android:textColor="@android:color/black"
                android:textSize="18sp" />

            <fragment xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:id="@+id/map"
                android:name="com.google.android.gms.maps.SupportMapFragment"
                android:layout_width="match_parent"
                android:layout_height="275dp"
                />
        </LinearLayout>
</ua.tripguide.tripguideua.Utils.CustomScrollView>